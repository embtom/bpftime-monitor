{
    "version": 7,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}/install"
            }
        },
        {
            "name": "base-amd64",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "base-aarch64",
            "hidden": true,
            "inherits": "base",
            "toolchainFile": "${sourceDir}/cmake/toolchain-gcc-arm64.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "switch-debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "switch-relwithdebinfo",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "amd64-Release",
            "inherits": "base-amd64"
        },
        {
            "name": "amd64-Debug",
            "inherits": [
                "switch-debug",
                "base-amd64"
            ]
        },
        {
            "name": "amd64-RelWithDebInfo",
            "inherits": [
                "switch-relwithdebinfo",
                "base-amd64"
            ]
        },
        {
            "name": "arm64-Release",
            "inherits": "base-aarch64"
        },
        {
            "name": "arm64-Debug",
            "inherits": [
                "switch-debug",
                "base-aarch64"
            ]
        },
        {
            "name": "arm64-RelWithDebInfo",
            "inherits": [
                "switch-relwithdebinfo",
                "base-aarch64"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "amd64-Release",
            "configurePreset": "amd64-Release",
            "targets": ["install"]
        },
        {
            "name": "amd64-Debug",
            "configurePreset": "amd64-Debug",
            "targets": ["install"]
        },
        {
            "name": "amd64-RelWithDebInfo",
            "configurePreset": "amd64-RelWithDebInfo",
            "targets": ["install"]

        },
        {
            "name": "arm64-Release",
            "configurePreset": "arm64-Release",
            "targets": ["install"]
        },
        {
            "name": "arm64-Debug",
            "configurePreset": "arm64-Debug",
            "targets": ["install"]
        },
        {
            "name": "arm64-RelWithDebInfo",
            "configurePreset": "arm64-RelWithDebInfo",
            "targets": ["install"]
        }
    ],
    "testPresets": [
        {
            "name": "amd64-Release",
            "configurePreset": "amd64-Release",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "amd64-Debug",
            "configurePreset": "amd64-Debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
